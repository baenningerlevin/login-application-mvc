@model LoginApplication.Models.Login

@{
	ViewData["Title"] = "Logged In";
	Login loggedInUser = Login.GetInstance();
}

<h2>Welcome, @loggedInUser.Username!</h2>
<h4 class="mt-4">Change Username</h4>
<hr />

<form asp-action="ChangeUsername">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Username" class="control-label"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Change Username" class="btn btn-primary" />
    </div>
</form>

<h4 class="mt-4">Change Password</h4>
<hr />

<form asp-action="ChangePassword">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label for="confirmPassword" class="control-label">Confirm Password</label>
        <input id="confirmPassword" class="form-control" name="confirmPassword" type="password" data-val="true" data-val-required="This field is required" />
        <span class="text-danger" data-valmsg-for="confirmPassword" data-valmsg-replace="true"></span>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Change Password" class="btn btn-primary" />
    </div>
</form>


<p>
	<a asp-action="LogOut" class="btn btn-outline-secondary mt-5">Log out</a>
</p>